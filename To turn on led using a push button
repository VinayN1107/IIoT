#define LED_PIN D1       // Define the GPIO pin for the LED 
#define BUTTON_PIN D2    // Define the GPIO pin for the push button 
void setup() { 
  pinMode(LED_PIN, OUTPUT);      // Set the LED pin as an output 
  pinMode(BUTTON_PIN, INPUT);    // Set the button pin as an input 
} 
void loop() { 
  int buttonState = digitalRead(BUTTON_PIN);  // Read the state of the button 
   if (buttonState == LOW) {  // Button is pressed (LOW) 
    digitalWrite(LED_PIN, LOW);  // Turn on the LED 
  } else {  // Button is released (HIGH) 
    digitalWrite(LED_PIN, HIGH);   // Turn off the LED 
  } 
} 
